<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/chemin_ortho_base_label" />
        
        <TextView
            android:id="@+id/base"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.41"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin" />

   </LinearLayout>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingLeft="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="@string/scale_factor_label" />
        
        <TextView
            android:id="@+id/scale_factor"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.41"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="@string/fs_label" />
        
        <TextView
            android:id="@+id/fs"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.41"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin" />

        
   </LinearLayout>
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingLeft="16dp"> 
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="@string/flon_label" />
        
        <TextView
            android:id="@+id/flon"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.41"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="@string/flat_label" />
        
        <TextView
            android:id="@+id/flat"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.41"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin" />
   </LinearLayout>
   
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/target_point"
            android:textAppearance="?android:attr/textAppearanceListItemSmall" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/east_label"
            android:textAppearance="?android:attr/textAppearanceListItemSmall" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/north_label"
            android:textAppearance="?android:attr/textAppearanceListItemSmall" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/ve_label"
            android:textAppearance="?android:attr/textAppearanceListItemSmall" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/vn_label"
            android:textAppearance="?android:attr/textAppearanceListItemSmall" />
    </LinearLayout>

    <ListView
        android:id="@+id/results_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp" >
    </ListView>
</LinearLayout>