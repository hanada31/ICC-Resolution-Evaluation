        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <receiver
            android:name=".SuntimesWidget1"
            android:enabled="@bool/api_post_14"
            android:label="@string/app_name_widget1"
            android:icon="@mipmap/ic_launcher">   <!-- TODO: icon -->

            <intent-filter>
