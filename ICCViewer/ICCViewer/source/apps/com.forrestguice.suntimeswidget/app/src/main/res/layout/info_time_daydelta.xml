<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout style="@style/SunsetTimeLayout"
        android:orientation="horizontal"
        android:id="@+id/layout_delta_day">

        <TextView
            style="@style/SunsetTimeTextView2"
            android:id="@+id/text_delta_day_prefix"
            android:gravity="start"
            android:layout_weight="0"
            android:maxLines="1"
            tools:text="Tomorrow will be" />

        <TextView
            style="@style/SunsetTimeTextView2"
            android:id="@+id/text_delta_day_value"
            android:gravity="start"
            android:layout_weight="0"
            android:maxLines="1"
            tools:text="2" />

        <TextView
            style="@style/SunsetTimeTextView2"
            android:id="@+id/text_delta_day_units"
            android:gravity="start"
            android:layout_weight="0"
            android:maxLines="1"
            tools:text="min" />

        <TextView
            style="@style/SunsetTimeTextView2"
            android:id="@+id/text_delta_day_suffix"
            android:gravity="start"
            android:layout_weight="1"
            android:maxLines="1" android:ellipsize="end"
            tools:text="shorter" />

    </LinearLayout>
</merge>