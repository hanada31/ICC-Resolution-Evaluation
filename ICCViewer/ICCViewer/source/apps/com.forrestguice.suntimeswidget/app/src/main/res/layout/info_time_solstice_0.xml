<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout style="@style/SunsetTimeLayout"
        android:orientation="vertical" android:layout_gravity="center_horizontal">

        <TextView
            style="@style/SunsetTimeTextView2" android:visibility="gone"
            android:id="@+id/text_time_event_label"
            tools:text="Spring Equinox" />

        <TextView
            style="@style/SunsetTimeTextView"
            android:id="@+id/text_time_event"
            tools:text="March 20, 3:28 AM" />

        <TextView
            style="@style/SunsetTimeTextView2"
            android:id="@+id/text_time_event_note"
            tools:text="20d 14h from now" />

    </LinearLayout>

</merge>