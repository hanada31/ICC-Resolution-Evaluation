<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        style="@style/SunsetTimeLayout"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_time_sunrise"
            style="@style/SunsetTimeImageView2"
            android:layout_width="@dimen/sunIconLarge_width"
            android:layout_marginTop="4dp"
            android:height="@dimen/sunIconLarge_height"
            android:contentDescription="@string/sunrise"
            android:scaleType="fitStart" />

        <LinearLayout
            style="@style/SunsetTimeLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_time_rise"
                style="@style/SunsetTimeTextView"
                android:textColor="@color/sunIcon_color_rising_dark"
                tools:text="7:00"/>

            <TextView
                android:id="@+id/text_time_rise_suffix"
                style="@style/SunsetTimeTextSuffixView"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                tools:text="AM"/>

        </LinearLayout>

    </LinearLayout>

</merge>