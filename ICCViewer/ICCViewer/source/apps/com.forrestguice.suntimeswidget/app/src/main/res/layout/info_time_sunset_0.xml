<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout style="@style/SunsetTimeLayout"
        android:orientation="horizontal">

        <ImageView
            style="@style/SunsetTimeImageView"
            android:id="@+id/icon_time_sunset"
            android:scaleType="fitEnd"
            android:layout_marginLeft="2dp" android:layout_marginRight="1dp" android:layout_marginTop="1dp"
            android:layout_marginStart="2dp" android:layout_marginEnd="1dp"
            android:contentDescription="@string/sunset_short"/>

        <TextView
            style="@style/SunsetTimeTextView"
            android:id="@+id/text_time_set"
            android:textColor="@color/sunIcon_color_setting_dark"
            tools:text="4:20" />

        <TextView
            style="@style/SunsetTimeTextSuffixView"
            android:id="@+id/text_time_set_suffix"
            android:layout_gravity="bottom"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            tools:text="PM" />

    </LinearLayout>
</merge>