<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout style="@style/SunsetTimeLayout" android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <LinearLayout style="@style/SunsetTimeLayout"
            android:orientation="horizontal">

            <TextView
                style="@style/SunsetTimeTextView"
                android:id="@+id/text_time_set"
                android:textColor="@color/sunIcon_color_setting_dark"
                tools:text="6:20" />

            <TextView
                style="@style/SunsetTimeTextSuffixView"
                android:id="@+id/text_time_set_suffix"
                android:layout_gravity="bottom"
                android:layout_height="match_parent"
                tools:text="PM" />

        </LinearLayout>

        <ImageView
            style="@style/SunsetTimeImageView2"
            android:id="@+id/icon_time_sunset"
            android:scaleType="fitEnd"
            android:layout_width="@dimen/sunIconLarge_width" android:height="@dimen/sunIconLarge_height"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/sunset" />

    </LinearLayout>
</merge>