<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="10dp">

    <ImageView android:id="@android:id/icon1"
        android:layout_width="@dimen/sunIconLarge_width" android:layout_height="@dimen/sunIconLarge_height"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:src="@drawable/ic_noon_large"
        tools:ignore="contentDescription" />

    <TextView android:id="@android:id/text1"
        style="?android:attr/dropDownItemStyle"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:singleLine="true" android:textStyle="bold" android:duplicateParentState="true"
        tools:text="text"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@android:id/icon1" android:layout_toEndOf="@android:id/icon1" />

</RelativeLayout>


