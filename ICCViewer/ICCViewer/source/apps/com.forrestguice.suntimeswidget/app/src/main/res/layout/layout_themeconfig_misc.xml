<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:orientation="vertical"
        android:id="@+id/layout_colors_misc"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <!-- Accent Color -->
        <com.forrestguice.suntimeswidget.settings.ColorChooserView
            android:id="@+id/chooser_accentColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:reverse="true"
            custom:labelText="@string/configLabel_themeColorAccent"
            custom:hintText="@string/configHint_themeColorSunrise" />

        <!-- Action Color -->
        <com.forrestguice.suntimeswidget.settings.ColorChooserView
            android:id="@+id/chooser_actionColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="48dp" android:layout_marginLeft="48dp"
            app:reverse="true"
            custom:labelText="@string/configLabel_themeColorAction"
            custom:hintText="@string/configHint_themeColorSunrise" />

    </LinearLayout>

</merge>
