<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:orientation="vertical"
        android:id="@+id/layout_colors_sun"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <!-- Sunrise Color -->
        <com.forrestguice.suntimeswidget.settings.ColorChooserView
            android:id="@+id/chooser_sunriseColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:hintText="@string/configHint_themeColorSunrise"
            app:labelText="@string/configLabel_themeColorSunrise"
            app:reverse="true" />

        <!-- Sunrise Fill Color -->
        <LinearLayout android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="48dp" android:layout_marginLeft="48dp">

            <com.forrestguice.suntimeswidget.settings.ColorChooserView
                android:id="@+id/chooser_sunriseFillColor"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:hintText="@string/configHint_themeColorSunrise"
                app:labelText="@string/configLabel_themeColorFill"
                app:reverse="true" />

            <CheckBox
                android:id="@+id/enable_risesetFillColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Sunrise Stroke Color -->
        <LinearLayout android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="48dp" android:layout_marginLeft="48dp">

            <com.forrestguice.suntimeswidget.settings.ColorChooserView
                android:id="@+id/chooser_sunriseStrokeColor"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:hintText="@string/configHint_themeColorSunrise"
                app:labelText="@string/configLabel_themeColorBorder"
                app:reverse="true" />

            <CheckBox
                android:id="@+id/enable_risesetStrokeColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Sunset Color -->
        <com.forrestguice.suntimeswidget.settings.ColorChooserView
            android:id="@+id/chooser_sunsetColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:hintText="@string/configHint_themeColorSunrise" app:labelText="@string/configLabel_themeColorSunset"
            app:reverse="true" />

        <!-- Sunset Fill Color -->
        <com.forrestguice.suntimeswidget.settings.ColorChooserView
            android:id="@+id/chooser_sunsetFillColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="48dp" android:layout_marginLeft="48dp"
            app:hintText="@string/configHint_themeColorSunrise"
            app:labelText="@string/configLabel_themeColorFill"
            app:reverse="true" />

        <!-- Sunset Stroke Color -->
        <com.forrestguice.suntimeswidget.settings.ColorChooserView
            android:id="@+id/chooser_sunsetStrokeColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="48dp" android:layout_marginLeft="48dp"
            app:hintText="@string/configHint_themeColorSunrise"
            app:labelText="@string/configLabel_themeColorBorder"
            app:reverse="true" />

        <!-- Icon Stroke -->
        <com.forrestguice.suntimeswidget.settings.SizeEditView
            android:id="@+id/chooser_iconStroke"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:labelText="@string/configLabel_themeBorderWidthRiseSet"
            app:hintText="@string/configHint_themeSizeTime" />

        <!-- Noon Color -->
        <LinearLayout android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.forrestguice.suntimeswidget.settings.ColorChooserView
                android:id="@+id/chooser_noonColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:hintText="@string/configHint_themeColorSunrise"
                app:labelText="@string/configLabel_themeColorNoon"
                app:reverse="true" />

            <CheckBox
                android:id="@+id/enable_noonColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Noon Fill Color -->
        <com.forrestguice.suntimeswidget.settings.ColorChooserView
            android:id="@+id/chooser_noonFillColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="48dp" android:layout_marginLeft="48dp"
            app:hintText="@string/configHint_themeColorSunrise"
            app:labelText="@string/configLabel_themeColorFill"
            app:reverse="true" />

        <!-- Noon Stroke Color -->
        <LinearLayout android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="48dp" android:layout_marginLeft="48dp">

            <com.forrestguice.suntimeswidget.settings.ColorChooserView
                android:id="@+id/chooser_noonStrokeColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:hintText="@string/configHint_themeColorSunrise"
                app:labelText="@string/configLabel_themeColorBorder"
                app:reverse="true" />

            <CheckBox
                android:id="@+id/checkBox_noonStrokeColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

        </LinearLayout>

        <!-- Noon Stroke -->
        <com.forrestguice.suntimeswidget.settings.SizeEditView
            android:id="@+id/chooser_noonIconStroke"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:labelText="@string/configLabel_themeBorderWidthNoon"
            app:hintText="@string/configHint_themeSizeTime" />

    </LinearLayout>

</merge>
