<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <!-- Title Area -->
        <LinearLayout
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content">

            <com.forrestguice.suntimeswidget.settings.SizeEditView
                android:id="@+id/chooser_titleSize"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:labelText="@string/configLabel_themeSizeTitle"
                app:hintText="@string/configHint_themeSizeTitle" />

            <CheckBox
                android:id="@+id/check_titleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:text="@string/configLabel_themeBoldTitle" />

        </LinearLayout>

        <com.forrestguice.suntimeswidget.settings.ColorChooserView
            android:id="@+id/chooser_titleColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:hintText="@string/configHint_themeColorSunrise"
            app:labelText="@string/configLabel_themeColorTitle"
            app:reverse="true" />

        <!-- Text Area -->
        <com.forrestguice.suntimeswidget.settings.SizeEditView
            android:id="@+id/chooser_textSize"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:labelText="@string/configLabel_themeSizeText"
            app:hintText="@string/configHint_themeSizeText" />

        <com.forrestguice.suntimeswidget.settings.ColorChooserView
            android:id="@+id/chooser_textColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:hintText="@string/configHint_themeColorSunrise"
            app:labelText="@string/configLabel_themeColorText"
            app:reverse="true" />

        <!-- Time Area -->
        <LinearLayout android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content">

            <com.forrestguice.suntimeswidget.settings.SizeEditView
                android:id="@+id/chooser_timeSize"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:labelText="@string/configLabel_themeSizeTime"
                app:hintText="@string/configHint_themeSizeTime" />

            <CheckBox
                android:id="@+id/check_timeBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/configLabel_themeBoldTime" />

        </LinearLayout>

        <com.forrestguice.suntimeswidget.settings.ColorChooserView
            android:id="@+id/chooser_timeColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:hintText="@string/configHint_themeColorSunrise"
            app:labelText="@string/configLabel_themeColorTime"
            app:reverse="true" />

        <!-- Suffix Area -->
        <com.forrestguice.suntimeswidget.settings.SizeEditView
            android:id="@+id/chooser_suffixSize"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:labelText="@string/configLabel_themeSizeSuffix"
            app:hintText="@string/configHint_themeSizeSuffix" />

        <com.forrestguice.suntimeswidget.settings.ColorChooserView
            android:id="@+id/chooser_suffixColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:hintText="@string/configHint_themeColorSunrise"
            app:labelText="@string/configLabel_themeColorSuffix"
            app:reverse="true" />

    </LinearLayout>

</merge>
