<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    style="@style/SunsetTimeWidget"
    android:id="@+id/widgetframe_inner"
    android:layout_height="match_parent">

    <TextView style="@style/SunsetTimeTextTitleView"
        android:id="@+id/text_title"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="start" android:visibility="visible"
        tools:text="title" android:layout_marginBottom="-3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">

        <include layout="@layout/info_time_noon_1" />

    </LinearLayout>

</LinearLayout>