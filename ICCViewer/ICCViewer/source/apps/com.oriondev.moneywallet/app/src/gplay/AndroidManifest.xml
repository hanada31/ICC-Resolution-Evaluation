<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oriondev.moneywallet">

    <application>
        <activity
            android:name="com.dropbox.core.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask">
            <intent-filter>
                <data android:scheme="db-${DropBoxApiKey}" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <service android:name=".service.dropbox.DropBoxBackupHandlerIntentService" />
        <service android:name=".service.google.GoogleDriveBackupHandlerIntentService" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${GoogleApiKey}"/>

    </application>

</manifest>