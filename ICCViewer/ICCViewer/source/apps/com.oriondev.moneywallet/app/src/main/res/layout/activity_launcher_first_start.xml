<com.oriondev.moneywallet.ui.view.theme.ThemedConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme_backgroundColor="colorWindowForeground" >

    <com.oriondev.moneywallet.ui.view.theme.ThemedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingEnd="@dimen/activity_launcher_first_start_padding_right"
            android:paddingLeft="@dimen/activity_launcher_first_start_padding_left"
            android:paddingRight="@dimen/activity_launcher_first_start_padding_right"
            android:paddingStart="@dimen/activity_launcher_first_start_padding_left">

            <ImageView
                android:layout_width="@dimen/activity_launcher_first_start_icon_width"
                android:layout_height="@dimen/activity_launcher_first_start_icon_height"
                android:src="@drawable/ic_app_icon_200dp"
                android:contentDescription="@string/app_name" />

            <com.oriondev.moneywallet.ui.view.theme.ThemedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_launcher_first_start_title"
                android:textSize="@dimen/activity_launcher_first_start_title_text_size"
                android:gravity="center"
                app:theme_textColor="textColorPrimary" />

            <com.oriondev.moneywallet.ui.view.theme.ThemedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/activity_launcher_first_start_content"
                android:textSize="@dimen/activity_launcher_first_start_content_text_size"
                app:theme_textColor="textColorSecondary" />

            <Button
                android:id="@+id/first_start_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_launcher_first_start_layout_button_margin_top"
                android:text="@string/activity_launcher_first_start_button_first_time" />

            <Button
                android:id="@+id/restore_backup_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_launcher_first_start_layout_button_margin_bottom"
                android:text="@string/activity_launcher_first_start_button_restore_backup" />

        </LinearLayout>

    </com.oriondev.moneywallet.ui.view.theme.ThemedScrollView>

</com.oriondev.moneywallet.ui.view.theme.ThemedConstraintLayout>