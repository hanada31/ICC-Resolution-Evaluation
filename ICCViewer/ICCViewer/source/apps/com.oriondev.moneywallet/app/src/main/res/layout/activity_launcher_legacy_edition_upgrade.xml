<com.oriondev.moneywallet.ui.view.theme.ThemedConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme_backgroundColor="colorWindowForeground" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingEnd="@dimen/activity_launcher_first_start_padding_right"
        android:paddingLeft="@dimen/activity_launcher_first_start_padding_left"
        android:paddingRight="@dimen/activity_launcher_first_start_padding_right"
        android:paddingStart="@dimen/activity_launcher_first_start_padding_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/activity_launcher_first_start_icon_width"
            android:layout_height="@dimen/activity_launcher_first_start_icon_height"
            android:src="@drawable/ic_app_icon_200dp"
            android:contentDescription="@string/app_name" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_launcher_legacy_edition_upgrade_title"
            android:textSize="@dimen/activity_launcher_first_start_title_text_size"
            app:theme_textColor="textColorPrimary" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="@dimen/material_component_progress_wheel_width"
            android:layout_height="@dimen/material_component_progress_wheel_height"
            android:layout_gravity="center"
            app:matProg_progressIndeterminate="true" />

    </LinearLayout>

</com.oriondev.moneywallet.ui.view.theme.ThemedConstraintLayout>