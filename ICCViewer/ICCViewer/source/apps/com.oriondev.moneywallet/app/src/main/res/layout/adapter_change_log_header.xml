<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.oriondev.moneywallet.ui.view.theme.ThemedTextView
        android:id="@+id/version_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/version_date_text_view"
        android:layout_toStartOf="@+id/version_date_text_view"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        app:theme_textColor="textColorPrimary"
        tools:text="Version 1.0" />

    <com.oriondev.moneywallet.ui.view.theme.ThemedTextView
        android:id="@+id/version_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        app:theme_textColor="textColorPrimary"
        tools:text="24 Aug, 2015" />

</RelativeLayout>