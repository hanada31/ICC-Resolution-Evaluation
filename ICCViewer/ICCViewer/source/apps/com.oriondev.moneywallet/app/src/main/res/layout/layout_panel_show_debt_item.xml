<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.oriondev.moneywallet.ui.view.theme.ThemedProgressWheel
        android:id="@+id/secondary_panel_progress_wheel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:matProg_progressIndeterminate="true" />

    <LinearLayout
        android:id="@+id/secondary_panel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_description"
            app:mtv_leftIcon="@drawable/ic_format_align_left_black_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Description here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_date"
            app:mtv_leftIcon="@drawable/ic_today_black_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Date here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/expiration_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_expiration_date"
            app:mtv_leftIcon="@drawable/ic_calendar_black_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Expiration date here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/wallet_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_wallet"
            app:mtv_leftIcon="@drawable/ic_folder_black_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Wallet name here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/people_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_people"
            app:mtv_leftIcon="@drawable/ic_people_black_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="People names here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/place_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_place"
            app:mtv_leftIcon="@drawable/ic_place_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Place name here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/note_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_note"
            app:mtv_leftIcon="@drawable/ic_content_paste_black_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Note here" />

    </LinearLayout>

</FrameLayout>