<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.oriondev.moneywallet.ui.view.theme.ThemedProgressWheel
        android:id="@+id/secondary_panel_progress_wheel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:matProg_progressIndeterminate="true" />

    <LinearLayout
        android:id="@+id/secondary_panel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_description"
            app:mtv_leftIcon="@drawable/ic_format_align_left_black_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Description here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/wallet_from_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_wallet_from"
            app:mtv_leftIcon="@drawable/ic_folder_black_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Wallet from here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/wallet_to_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_wallet_to"
            app:mtv_leftIcon="@drawable/ic_folder_black_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Wallet to here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/tax_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_tax"
            app:mtv_leftIcon="@drawable/ic_mode_edit_black_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Wallet to here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/recurrence_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_recurrence"
            app:mtv_leftIcon="@drawable/ic_restore_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Recurrence here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/event_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_event"
            app:mtv_leftIcon="@drawable/ic_assistant_photo_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Event here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/place_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_place"
            app:mtv_leftIcon="@drawable/ic_place_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Place here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedMaterialTextView
            android:id="@+id/note_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_edit_text_margin_top"
            android:layout_marginBottom="@dimen/material_activity_body_edit_text_margin_bottom"
            app:mtv_mode="floatingLabel"
            app:mtv_floatingLabelText="@string/hint_note"
            app:mtv_leftIcon="@drawable/ic_content_paste_black_24dp"
            app:mtv_bottomLineEnabled="true"
            tools:text="Note here" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedCheckBox
            android:id="@+id/confirmed_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_activity_body_check_box_top_bottom_margin"
            android:layout_marginLeft="@dimen/material_activity_body_check_box_start_end_margin"
            android:layout_marginRight="@dimen/material_activity_body_check_box_start_end_margin"
            android:paddingLeft="@dimen/material_activity_body_check_box_start_padding"
            android:paddingStart="@dimen/material_activity_body_check_box_start_padding"
            android:hint="@string/hint_confirmed"
            android:checked="true"
            android:clickable="false"
            tools:ignore="RtlSymmetry" />

        <com.oriondev.moneywallet.ui.view.theme.ThemedCheckBox
            android:id="@+id/count_in_total_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/material_activity_body_check_box_top_bottom_margin"
            android:layout_marginLeft="@dimen/material_activity_body_check_box_start_end_margin"
            android:layout_marginRight="@dimen/material_activity_body_check_box_start_end_margin"
            android:paddingLeft="@dimen/material_activity_body_check_box_start_padding"
            android:paddingStart="@dimen/material_activity_body_check_box_start_padding"
            android:hint="@string/hint_show_in_total"
            android:checked="true"
            android:clickable="false"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

</FrameLayout>