                        android:layout_marginRight="5dp"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/layout_padding"
                android:paddingLeft="25dp"
                android:paddingTop="@dimen/layout_padding"
                android:text="@string/settings_background_color"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_padding"
                android:paddingRight="@dimen/layout_padding">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/dialogBackgroundsCardsBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dialogBackgroundColorBoxWidth"
                            android:layout_height="@dimen/dialogBackgroundColorBoxWidth"
                            android:layout_margin="5dp"
                            android:background="@drawable/image_border"
                            app:srcCompat="@drawable/background_color_blue" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dialogBackgroundsCardsRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
