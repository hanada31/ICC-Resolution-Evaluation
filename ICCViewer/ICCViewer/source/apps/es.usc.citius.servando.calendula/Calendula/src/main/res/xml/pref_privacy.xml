<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="@string/prefkey_pin_lock"
        android:summary="@string/pref_summary_pin_lock_unset"
        android:title="@string/pref_title_pin_lock"/>

    <ListPreference
        android:defaultValue="120"
        android:enabled="false"
        android:entries="@array/pref_lock_after_names"
        android:entryValues="@array/pref_lock_after_values"
        android:key="@string/prefkey_pin_timeout"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_pin_timeout_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:enabled="false"
        android:key="@string/prefkey_fingerprint_enabled"
        android:title="@string/pref_fingerprint_enable_title"/>

    <SwitchPreference
        android:defaultValue="true"
        android:enabled="true"
        android:key="@string/prefkey_secure_window"
        android:title="@string/pref_secure_window_title"
        android:summary="@string/pref_secure_window_summary"
        />

</PreferenceScreen>