<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">
    <TextView  android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="@string/lbl_registration_add_part_three_title"
               android:textColor="@color/wizard_page_title"
               android:gravity="center_horizontal"
               android:textSize="@dimen/text_size_large"
               android:textStyle="bold"/>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/time_registration_add_wizard_error"
              style="@style/WorkTimeValidationError"
              android:padding="5dp"/>

    <TableLayout android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:stretchColumns="1">
        <TableRow>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/lbl_registration_add_part_three_project_label"
                      android:padding="3dip"
                      android:textSize="@dimen/text_size_medium"/>
            <Button android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:id="@+id/registration_add_part_three_project"/>
            <ImageView android:id="@+id/btn_delete_project"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:src="@drawable/ic_delete"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/lbl_registration_add_part_three_task_label"
                      android:padding="3dip"
                      android:textSize="@dimen/text_size_medium"/>
            <Button android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:id="@+id/registration_add_part_three_task"/>
            <ImageView android:id="@+id/btn_delete_task"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:src="@drawable/ic_delete"/>
        </TableRow>
    </TableLayout>
</LinearLayout>