<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">
    <TextView  android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="@string/lbl_registration_add_part_five_title"
               android:textColor="@color/wizard_page_title"
               android:gravity="center_horizontal"
               android:textSize="@dimen/text_size_large"
               android:textStyle="bold"/>

    <!-- Start time and date -->
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_registration_add_part_five_start"
                  style="@style/WorkTimeDetailsInfoLabel"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/time_registration_add_wizard_review_start"
                  style="@style/WorkTimeDetailsInfo"/>
    </LinearLayout>
    <!-- End time and date -->
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_registration_add_part_five_end"
                  style="@style/WorkTimeDetailsInfoLabel"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/time_registration_add_wizard_review_end"
                  style="@style/WorkTimeDetailsInfo"/>
    </LinearLayout>
    <!-- Duration -->
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_registration_add_part_five_duration"
                  style="@style/WorkTimeDetailsInfoLabel"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/time_registration_add_wizard_review_duration"
                  style="@style/WorkTimeDetailsInfo"/>
    </LinearLayout>
    <!-- Comment -->
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/lbl_registration_add_part_five_comment"
              style="@style/WorkTimeDetailsInfoLabel"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/time_registration_add_wizard_review_comment"
              style="@style/WorkTimeDetailsInfo"/>
    <!-- Project -->
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_registration_add_part_five_project"
                  style="@style/WorkTimeDetailsInfoLabel"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/time_registration_add_wizard_review_project"
                  style="@style/WorkTimeDetailsInfo"/>
    </LinearLayout>
    <!-- Task -->
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_registration_add_part_five_task"
                  style="@style/WorkTimeDetailsInfoLabel"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/time_registration_add_wizard_review_task"
                  style="@style/WorkTimeDetailsInfo"/>
    </LinearLayout>
</LinearLayout>