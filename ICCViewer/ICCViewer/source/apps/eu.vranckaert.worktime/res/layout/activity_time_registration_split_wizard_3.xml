<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">
    <TextView  android:layout_width="fill_parent"
        	   android:layout_height="wrap_content"
        	   android:text="@string/lbl_registration_split_part_three_title"
        	   android:textColor="@color/sub_title_background"
        	   android:gravity="center_horizontal"
        	   android:textSize="@dimen/text_size_medium"/>
    <!-- Time Registration 1 -->
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:text="@string/lbl_registration_split_part_three_tr1"
              android:paddingLeft="3dip" />
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_registration_split_part_three_starts_on"
                  android:paddingLeft="3dip" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/time_registration_split_tr1_start"
                  android:paddingLeft="3dip" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_registration_split_part_three_ends_on"
                  android:paddingLeft="3dip" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/time_registration_split_tr1_end"
                  android:paddingLeft="3dip" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_registration_split_part_three_duration"
                  android:paddingLeft="3dip" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/time_registration_split_tr1_duration"
                  android:paddingLeft="3dip"/>
    </LinearLayout>

    <!-- Time registration 2 -->
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:text="@string/lbl_registration_split_part_three_tr2"
              android:paddingLeft="3dip"
              android:paddingTop="10dip"/>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_registration_split_part_three_starts_on"
                  android:paddingLeft="3dip" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/time_registration_split_tr2_start"
                  android:paddingLeft="3dip" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_registration_split_part_three_ends_on"
                  android:paddingLeft="3dip" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/time_registration_split_tr2_end"
                  android:paddingLeft="3dip" />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_registration_split_part_three_duration"
                  android:paddingLeft="3dip" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/time_registration_split_tr2_duration"
                  android:paddingLeft="3dip"/>
    </LinearLayout>

    <!-- Gap between TR1 and TR2 -->
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:text="@string/lbl_registration_split_part_three_gap"
              android:paddingLeft="3dip"
              android:paddingTop="15dip"/>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/time_registration_split_gap"
              android:paddingLeft="3dip"
              android:paddingBottom="15dip"/>
</LinearLayout>