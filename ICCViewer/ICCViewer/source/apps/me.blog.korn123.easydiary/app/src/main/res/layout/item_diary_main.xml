<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        style="@style/AppCard">
        <LinearLayout
            style="@style/LinearLayoutVertical">
            <LinearLayout
                style="@style/LinearLayoutHorizontal">
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/weather"
                    android:layout_marginEnd="10dp"
                    android:layout_width="@dimen/diary_symbol_width"
                    android:layout_height="@dimen/diary_symbol_width" />
                
                <LinearLayout
                    style="@style/LinearLayoutVertical"
                    android:layout_width="0dp"
                    android:layout_weight="1">
                    <com.simplemobiletools.commons.views.MyTextView
                        android:id="@+id/text1"
                        android:gravity="center_vertical"
                        style="@style/text_view_diary_main_item_inner_contents"/>
                    
                    <com.simplemobiletools.commons.views.MyTextView
                        android:id="@+id/text3"
                        android:gravity="end"
                        style="@style/text_view_diary_main_item_inner_contents"/>
                </LinearLayout>
            </LinearLayout>
    
            <com.simplemobiletools.commons.views.MyTextView
                android:id="@+id/text2"
                android:layout_marginTop="@dimen/card_contents_padding"
                android:maxLines="3"
                android:gravity="start"
                style="@style/text_view_diary_main_item_inner_contents"/>

            <RelativeLayout
                android:id="@+id/photoContainer"
                android:layout_marginTop="@dimen/card_contents_padding"
                android:layout_width="match_parent"
                android:layout_height="28dp">
                <LinearLayout
                    android:id="@+id/photoViews"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/card_contents_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <me.blog.korn123.easydiary.views.FixedCardView
                    app:fixedAppcompatPadding="true"
                    android:id="@+id/locationContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/contentsLengthContainer"
                    android:layout_alignWithParentIfMissing="true">
                    <LinearLayout
                        android:padding="5dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginRight="3dp"
                            android:id="@+id/locationSymbol"
                            android:src="@drawable/map_marker_2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"/>
                        <TextView
                            android:id="@+id/locationLabel"
                            android:text="There is no location information. Click to update location information."
                            android:textColor="?attr/colorPrimary"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </me.blog.korn123.easydiary.views.FixedCardView>
                <me.blog.korn123.easydiary.views.FixedCardView
                    app:fixedAppcompatPadding="true"
                    android:id="@+id/contentsLengthContainer"
                    android:layout_marginStart="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        tools:text="100"
                        android:id="@+id/contentsLength"
                        android:padding="5dp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </me.blog.korn123.easydiary.views.FixedCardView>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>    