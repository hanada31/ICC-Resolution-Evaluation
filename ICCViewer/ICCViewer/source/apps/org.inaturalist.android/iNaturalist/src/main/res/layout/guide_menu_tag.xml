<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:clickable="true"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/content">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:clickable="false"
            android:focusable="false"
            android:duplicateParentState="false"
            />

        <TextView
            android:id="@+id/tagCount"
            android:layout_width="55dp"
            android:text="10"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ff404040"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginEnd="0dp"
            android:gravity="center_horizontal"
            />


        <ImageView
            android:id="@+id/tag_photo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp"
            android:src="@drawable/ic_insert_photo_white_24dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tagName"
            android:layout_toEndOf="@id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tag_photo"
            android:layout_marginStart="0dp"
            android:textColor="#000000"
            android:text="Some tag with multi line words and some more text to fit in multi line words and some more"
            android:textSize="19dp"
            />
    </RelativeLayout>


    <View
        android:id="@+id/column_separator"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="10dp"
        android:background="#ffffff"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/content"
        android:layout_alignBottom="@id/content"
        />

</RelativeLayout>