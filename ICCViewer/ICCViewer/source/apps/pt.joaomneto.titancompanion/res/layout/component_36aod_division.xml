<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/adventureVitalStats"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="10dp">

    <TextView
            android:id="@+id/aod_division_name"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignBottom="@+id/aod_division_minusDivisionTotalTotal"
            android:layout_alignParentTop="true"
            android:text="@string/addBooty"
            android:layout_toStartOf="@+id/aod_division_minusDivisionTotalTotal"/>

    <Button
            android:id="@+id/aod_division_minusDivisionTotalTotal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:text="@string/minusFive"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/aod_division_totalValue"/>


    <Button
            android:id="@+id/aod_division_plusDivisionTotalButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:padding="0dp"
            android:layout_marginEnd="20dp"
            android:text="@string/plusFive"/>

    <TextView
            android:id="@+id/aod_division_totalValue"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_toLeftOf="@id/aod_division_plusDivisionTotalButton"
            android:textAppearance="?android:attr/textAppearanceMedium"/>


</RelativeLayout>