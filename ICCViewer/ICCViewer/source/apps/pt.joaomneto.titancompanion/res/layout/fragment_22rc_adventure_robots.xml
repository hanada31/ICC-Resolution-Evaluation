<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/adventureVitalStats"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:useDefaultMargins="true"
                tools:context="pt.joaomneto.titancompanion.adventure.impl.fragments.rc.RCAdventureRobotFragment">

    <Button
            android:id="@+id/addRobotButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/addRobot"/>

    <!--     <View -->
    <!--         android:id="@+id/centerShim" -->
    <!--         android:layout_width="0dp" -->
    <!--         android:layout_height="match_parent" -->
    <!--         android:layout_centerHorizontal="true" -->
    <!--         android:visibility="invisible" /> -->

    <ListView
            android:id="@+id/robotList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/addRobotButton"
            android:background="@drawable/border_back"
            android:layout_alignLeft="@+id/addRobotButton"
            android:layout_alignParentRight="true">
    </ListView>

</RelativeLayout>